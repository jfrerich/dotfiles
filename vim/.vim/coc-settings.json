{
  "list.nextKeymap": "<C-n>",
  "list.previousKeymap": "<C-p>",
  "list.maxHeight": 20,
  "list.insertMappings": {
    "<C-c>": "do:exit"
  },

  "explorer.icon.enableVimDevions": true,
  "explorer.icon.enableNerdfont": true,

  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.hoverTarget": "echo",

  "suggest.noselect": false,
  "suggest.snippetIndicator": " [snip]",
  "suggest.preferCompleteThanJumpPlaceholder": true,
  "suggest.echodocSupport": true,
  "suggest.floatEnable": true,

  "diagnostic.checkCurrentLine": true,
  "diagnostic.messageTarget": "float",

  "signature.enable": true,
  "signature.target": "echo",
  "signature.triggerSignatureWait": 300,

  "snippets.userSnippetsDirectory": "/Users/jfrerich/.vim/mysnippets",
  "eslint.autoFixOnSave": true,
  "eslint.filetypes": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "jest.watch": true,
  "jest.watchman": true,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    },
     "efm": {
      "command": "efm-langserver",
      "args": [],
      "filetypes": ["vim", "eruby", "vimwiki"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh", "zsh"],
      "ignoredRootPaths": ["~"]
    },
  },
}

